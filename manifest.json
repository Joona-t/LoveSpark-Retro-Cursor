{
  "manifest_version": 3,
  "name": "LoveSpark Retro Cursor Pack",
  "version": "1.0.0",
  "description": "Retro pink LoveSpark cursors with soft glow and sparkles for most webpages.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LoveSpark Retro Cursor Pack"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cursors/*.png", "cursors/*/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
