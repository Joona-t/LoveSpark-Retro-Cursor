{
  "manifest_version": 3,
  "name": "LoveSpark Retro Cursor Pack",
  "version": "1.1.0",
  "description": "10 cursor themes â€” retro pinks, pastels, cyber, mint, golden, holo, obsidian.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LoveSpark Retro Cursor Pack"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cursors/*.png", "cursors/*/*.png", "cursors/*/*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
